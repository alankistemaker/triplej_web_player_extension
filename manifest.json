{
  "manifest_version": 3,
  "name": "TripleJ Player Background Changer",
  "version": "1.0",
  "description": "Change the background color of triple j webplayer",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.abc.net.au/triplej/live/triplej/*"],
      "js": ["content.js"]
    }
  ]
}
